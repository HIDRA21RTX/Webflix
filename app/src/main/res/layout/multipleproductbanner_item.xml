<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conslayout"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="#000"
    android:layout_marginEnd="5dp"
    >

    <ImageView
        android:id="@+id/item_image2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="0dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ewpo" />


    <ImageView
        android:id="@+id/item_image4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="0dp"

        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/play" />

    <TextView
        android:id="@+id/pname2"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/weflix"
        android:text="WeFlix"

        android:textColor="#F50000"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_image2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:fontFamily="@font/psregular"
        android:gravity="center"
        android:padding="5dp"

        android:text="The End Of the F***ing World"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"

        android:background="@drawable/grdient_overlay_2"
        app:layout_constraintBottom_toBottomOf="@+id/item_image2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="80dp"
        android:background="#FF0000"
        android:fontFamily="@font/psregular"
        android:gravity="center"
        android:text="Ranked 2nd"
        android:textColor="#FFFFFF"
        android:textSize="8sp"

        android:padding="2dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="2dp"
        android:background="#D90000"
        android:fontFamily="@font/psregular"
        android:text="S5"
        android:textColor="#FFFFFF"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_image2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83" />


</androidx.constraintlayout.widget.ConstraintLayout>